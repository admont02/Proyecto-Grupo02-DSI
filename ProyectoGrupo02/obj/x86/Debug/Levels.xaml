<Page
    x:Class="ProyectoGrupo02.Levels"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProyectoGrupo02"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Gray">
    <Viewbox Stretch="Uniform">

        <Grid Background="Gray" Width="979" Height="653" >
            <!--Back-->
            <Button x:ConnectionId='2' x:Name="Back" Width="70" Height="70" VerticalAlignment="Top"                    Margin="20" Background="Black">
                <Viewbox MaxHeight="200" MaxWidth="200">
                    <SymbolIcon Width="25"  Symbol="Back"/>
                </Viewbox>
            </Button>
            <!--Título-->
            <TextBlock Text="Bloodsucker" FontSize="100" HorizontalAlignment="Center" VerticalAlignment="Top" 
                   FontFamily="Monserrat" FontWeight="Black" Foreground="Black" Margin="60"/>
            <!--Levels-->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Center" Margin="0,60,0,0">
                <Button x:ConnectionId='3' x:Name="one" Width="100" Height="100"                     Margin="20" Background="DarkRed" Content="1" FontFamily="Times New Roman" FontSize="64">
                </Button>
                <Button x:ConnectionId='4' x:Name="two" Width="100" Height="100"                     Margin="20" Background="DarkRed" Content="2" FontFamily="Times New Roman" FontSize="64">
                </Button>
                <Button x:ConnectionId='5' x:Name="three" Width="100" Height="100"                     Margin="20" Background="DarkRed" Content="3" FontFamily="Times New Roman" FontSize="64">
                </Button>
                <Button x:ConnectionId='6' x:Name="four" Width="100" Height="100"                     Margin="20" Background="DarkRed" Content="4" FontFamily="Times New Roman" FontSize="64">
                </Button>
                <Button x:ConnectionId='7' x:Name="five" Width="100" Height="100"                     Margin="20" Background="DarkRed" Content="5" FontFamily="Times New Roman" FontSize="64">
                </Button>
                <Button x:ConnectionId='8' x:Name="six" Width="100" Height="100"                     Margin="20" Background="DarkRed" Content="6" FontFamily="Times New Roman" FontSize="64">
                </Button>
            </StackPanel>
        </Grid>
    </Viewbox>
</Page>

