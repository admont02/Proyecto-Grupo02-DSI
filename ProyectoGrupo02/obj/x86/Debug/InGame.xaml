<Page x:ConnectionId='1'
    x:Class="ProyectoGrupo02.InGame"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProyectoGrupo02"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Gray">
    <Viewbox Stretch="Uniform">
        <Grid Background="Gray" Width="979" Height="653" >
            <!--Objetos-->
            <ListView x:ConnectionId='2'                                                    
                   HorizontalAlignment="Left" VerticalAlignment="Center"
                   IsItemClickEnabled="True"
                                           
                   CanDragItems="True"
                                                                     >
                <ListView.ItemTemplate>
                    <DataTemplate                            >
                        <StackPanel x:ConnectionId='13' Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                            <TextBlock x:ConnectionId='14'                    FontSize="30"/>
                            <Image x:ConnectionId='15'                          Height="50" />
                            
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!--pontenciadores de click-->
            <!--<ListView  ItemsSource="{x:Bind Booster}"                
                   HorizontalAlignment="Right" VerticalAlignment="Center"
                   IsItemClickEnabled="True"
                   ItemClick=" ChangeImage"
                   CanDragItems="True"
                   DragItemsStarting="ListView_DragItemsStarting">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:VMObject">
                        <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                            <TextBlock Text="{x:Bind Id}" FontSize="30"/>
                            <Image Source="{x:Bind Imagen}" Height="50" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>-->
            <!--pausa-->
            <Button x:ConnectionId='3' x:Name="Pause" Width="70" Height="70" VerticalAlignment="Top" HorizontalAlignment="Left"                     Margin="20" Background="Black">
                <Viewbox MaxHeight="200" MaxWidth="200">
                    <SymbolIcon  Symbol="Pause"/>
                </Viewbox>
            </Button>

            <!--Dinero-->
            <TextBlock x:ConnectionId='4' x:Name="Money" Text="0" Margin="150, 40" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="24" FontFamily="Comic Sans MS"/>

            <!--Clicker-->
            <Button x:ConnectionId='5'  Width="100" Height="100" Content="Click me!"                       HorizontalAlignment="Right" VerticalAlignment="Top" Margin="50">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="Gold"/>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!--Compras-->
            <Ellipse Fill="Silver" Width="200" Height="200" 
                     HorizontalAlignment="Left" VerticalAlignment="Top" 
                     Margin="130" 
                     
                     />
            <Ellipse Fill="Silver" Width="100" Height="125" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,150,195,0"/>
            
            <!--Caminos-->
            <Canvas x:ConnectionId='6' x:Name="CanvasTop" Width="100" Height="200" Margin="129" VerticalAlignment="Top">
            </Canvas>
            <Rectangle x:ConnectionId='7' x:Name="TopRectangle" Width="100" Height="200" 
                       Fill="Bisque" VerticalAlignment="Top" Margin="129"
                      AllowDrop="True"                                                />
            <!--<Canvas x:Name="CanvasRight" Width="200" Height="100" Margin="90" VerticalAlignment="Bottom" HorizontalAlignment="Right">-->
            <!--</Canvas>-->
            <Rectangle x:ConnectionId='8' x:Name="RightRectangle" Width="200" Height="100"
                       Fill="Bisque" VerticalAlignment="Bottom" 
                       HorizontalAlignment="Right" Margin="90"
                       AllowDrop="True"                                                />
            <!--<Canvas x:Name="CanvasLeft" Width="200" Height="100" Margin="90" VerticalAlignment="Bottom" HorizontalAlignment="Left">-->
            <!--</Canvas>-->
            <Rectangle x:ConnectionId='9' x:Name="LeftRectangle" Width="200" Height="100" 
                       Fill="Bisque" VerticalAlignment="Bottom" 
                       HorizontalAlignment="Left" Margin="90"
                       AllowDrop="True"                                                />
            
            <!--Tierra-->
            <Image Source="Assets/Earth.png" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Bottom" 
               Width="300" Height="300" />
        </Grid>
    </Viewbox>
</Page>

