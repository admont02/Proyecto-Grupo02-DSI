<Page x:ConnectionId='1'
    x:Class="ProyectoGrupo02.InGame"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProyectoGrupo02"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Gray">
    <Viewbox Stretch="Uniform">
        <Grid Background="Gray" Width="979" Height="653" >
            <!--Objetos-->
            <ListView x:ConnectionId='2'                                                    
                   HorizontalAlignment="Left" VerticalAlignment="Center"
                   IsItemClickEnabled="True"
                                           
                   CanDragItems="True"
                                                                     
                       AllowDrop="True"
                       >
                <ListView.ItemTemplate>
                    <DataTemplate                            >
                        <StackPanel x:ConnectionId='25' Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                            <TextBlock x:ConnectionId='26'                    FontSize="30"/>
                            <Image x:ConnectionId='27'                          Height="50" />

                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!--pontenciadores de click-->
            <!--<ListView  ItemsSource="{x:Bind Booster}"                
                   HorizontalAlignment="Right" VerticalAlignment="Center"
                   IsItemClickEnabled="True"
                   ItemClick=" ChangeImage"
                   CanDragItems="True"
                   DragItemsStarting="ListView_DragItemsStarting">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:VMObject">
                        <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                            <TextBlock Text="{x:Bind Id}" FontSize="30"/>
                            <Image Source="{x:Bind Imagen}" Height="50" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>-->
            <!--pausa-->
            <Button x:ConnectionId='3' x:Name="Pause" Width="70" Height="70" VerticalAlignment="Top" HorizontalAlignment="Left"                     Margin="20" Background="Black">
                <Viewbox MaxHeight="200" MaxWidth="200">
                    <SymbolIcon  Symbol="Pause"/>
                </Viewbox>
            </Button>

            <!--Dinero-->
            <TextBlock x:ConnectionId='4' x:Name="Money" Text="0" Margin="150, 40" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="24" FontFamily="Comic Sans MS"/>

            <!--Clicker-->
            <Button x:ConnectionId='5'  Width="100" Height="100" Content="Click me!"                       HorizontalAlignment="Right" VerticalAlignment="Top" Margin="50">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="Gold"/>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!--Compras-->
            <Ellipse Fill="Silver" Width="200" Height="200" 
                     HorizontalAlignment="Left" VerticalAlignment="Top" 
                     Margin="130" 
                     
                     />
            <Ellipse Fill="Silver" Width="100" Height="125" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,150,195,0"/>

            <!--Caminos-->
            <Canvas x:ConnectionId='6' x:Name="CanvasTop" Width="100" Height="200" Margin="129" VerticalAlignment="Top" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <!--Casillas-->
                    <Image x:ConnectionId='14' x:Name="L0" Source="Assets/casilla.png" Stretch="Fill" 
                           Height="50" Width="50" Grid.Column="0" Grid.Row="0"/>
                    <Image x:ConnectionId='15' x:Name="L1" Source="Assets/casilla.png" Stretch="Fill" 
                           Height="50" Width="50" Grid.Column="0" Grid.Row="1"/>
                    <Image x:ConnectionId='16' x:Name="L2" Source="Assets/casilla.png" Stretch="Fill" 
                           Height="50" Width="50" Grid.Column="0" Grid.Row="2"/>
                    <Image x:ConnectionId='17' x:Name="L3" Source="Assets/casilla.png" Stretch="Fill" 
                           Height="50" Width="50" Grid.Column="0" Grid.Row="3"/>
                    
                    <Image x:ConnectionId='18' x:Name="R0" Source="Assets/casilla.png" Stretch="Fill" 
                           Height="50" Width="50" Grid.Column="1" Grid.Row="0"/>
                    <Image x:ConnectionId='19' x:Name="R1" Source="Assets/casilla.png" Stretch="Fill" 
                           Height="50" Width="50" Grid.Column="1" Grid.Row="1"/>
                    <Image x:ConnectionId='20' x:Name="R2" Source="Assets/casilla.png" Stretch="Fill" 
                           Height="50" Width="50" Grid.Column="1" Grid.Row="2"/>
                    <Image x:ConnectionId='21' x:Name="R3" Source="Assets/casilla.png" Stretch="Fill" 
                           Height="50" Width="50" Grid.Column="1" Grid.Row="3"/>
                    
                </Grid>
                
                <Image x:ConnectionId='13' x:Name="Prueba" Source="Assets/0.png" Height="60" Canvas.Top="130"
                       Width="50" Canvas.Left="10"                     CanDrag="True" 
                                                   AllowDrop="True"
                       Visibility="Collapsed"/>
            </Canvas>
            <Canvas x:ConnectionId='7' x:Name="CanvasLeft" Width="200" Height="100" Margin="129" VerticalAlignment="Top" >
                <Image x:ConnectionId='12' x:Name="Prueba2" Source="Assets/0.png" Height="60" Canvas.Top="130"
                       Width="50" Canvas.Left="10"                     CanDrag="True" 
                                                   AllowDrop="True"
                       Visibility="Collapsed"/>
            </Canvas>
            <Canvas x:ConnectionId='8' x:Name="CanvasRight" Width="200" Height="100" Margin="129" VerticalAlignment="Top" >
                <Image x:ConnectionId='11' x:Name="Prueba3" Source="Assets/0.png" Height="60" Canvas.Top="130" Width="50" Canvas.Left="10" 
                                           CanDrag="True"                             AllowDrop="True"
                       Visibility="Collapsed"/>
            </Canvas>



            <!--Tierra-->
            <Image Source="Assets/Earth.png" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Bottom" 
               Width="300" Height="300" />
            <Rectangle x:ConnectionId='9' x:Name="RightRectangle" 
                       Fill="Bisque" Margin="729,456,50,97"
                                            CanDrag="True"                             AllowDrop="True"/>
            <Rectangle x:ConnectionId='10' x:Name="LeftRectangle" 
                       Fill="Bisque" Margin="55,456,724,97"
                                            CanDrag="True"                             
                           AllowDrop="True"/>
        </Grid>
    </Viewbox>
</Page>

