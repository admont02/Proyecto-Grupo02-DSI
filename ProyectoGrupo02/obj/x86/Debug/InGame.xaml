<Page x:ConnectionId='1'
    x:Class="ProyectoGrupo02.InGame"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProyectoGrupo02"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Gray">
    <Viewbox Stretch="Uniform">
        <Grid Background="Gray" Width="979" Height="653" >
            <!--Objetos-->
            <ListView x:ConnectionId='2'                                                    
                   HorizontalAlignment="Left" VerticalAlignment="Center"
                   IsItemClickEnabled="True"
                                           
                   CanDragItems="True"
                                                                     
                       AllowDrop="True"
                       >
                <ListView.ItemTemplate>
                    <DataTemplate                            >
                        <StackPanel x:ConnectionId='41' Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                            <Image x:ConnectionId='42'                          Height="50" />

                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!--pontenciadores de click-->
            <!--<ListView  ItemsSource="{x:Bind Booster}"                
                   HorizontalAlignment="Right" VerticalAlignment="Center"
                   IsItemClickEnabled="True"
                   ItemClick=" ChangeImage"
                   CanDragItems="True"
                   DragItemsStarting="ListView_DragItemsStarting">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:VMObject">
                        <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                            <TextBlock Text="{x:Bind Id}" FontSize="30"/>
                            <Image Source="{x:Bind Imagen}" Height="50" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>-->
            <!--pausa-->
            <Button x:ConnectionId='3' x:Name="Pause" Width="70" Height="70" VerticalAlignment="Top" HorizontalAlignment="Left"                     Margin="20" Background="Black">
                <Viewbox MaxHeight="200" MaxWidth="200">
                    <SymbolIcon  Symbol="Pause"/>
                </Viewbox>
            </Button>

            <!--Dinero-->
            <TextBlock x:ConnectionId='4' x:Name="Money" Text="0" Margin="150, 40" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="24" FontFamily="Comic Sans MS"/>

            <!--Clicker-->
            <Button x:ConnectionId='5'  Width="100" Height="100" Content="Click me!"                       HorizontalAlignment="Right" VerticalAlignment="Top" Margin="50">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="Gold"/>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!--Compras-->
            <Ellipse Fill="Silver" Width="200" Height="200" 
                     HorizontalAlignment="Left" VerticalAlignment="Top" 
                     Margin="130" 
                     
                     />
            <Ellipse Fill="Silver" Width="100" Height="125" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,150,195,0"/>

            <!--Caminos-->
            <Canvas x:ConnectionId='6' x:Name="CanvasTop" Width="100" Height="200" Margin="129" VerticalAlignment="Top" >
                <Image x:ConnectionId='27' x:Name="MiddleBackground" Source="Assets/casillaTopFondo.png"
                           Height="200" Width="100" />
                <Grid x:ConnectionId='28'                             >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <!--Casillas-->
                    <Image x:ConnectionId='30' x:Name="middleLeft0" Source="Assets/casilla.png" Stretch="Fill" 
                           Height="50" Width="50" Grid.Column="0" Grid.Row="0"
                           AllowDrop="True"                                                />
                    <Image x:ConnectionId='31' x:Name="middleLeft1" Source="Assets/casilla.png" Stretch="Fill" 
                           Height="50" Width="50" Grid.Column="0" Grid.Row="1"
                           AllowDrop="True"                                                />
                    <Image x:ConnectionId='32' x:Name="middleLeft2" Source="Assets/casilla.png" Stretch="Fill" 
                           Height="50" Width="50" Grid.Column="0" Grid.Row="2"
                           AllowDrop="True"                                                />
                    <Image x:ConnectionId='33' x:Name="middleLeft3" Source="Assets/casilla.png" Stretch="Fill" 
                           Height="50" Width="50" Grid.Column="0" Grid.Row="3"
                           AllowDrop="True"                                                />

                    <Image x:ConnectionId='34' x:Name="middleRight0" Source="Assets/casilla.png" Stretch="Fill" 
                           Height="50" Width="50" Grid.Column="1" Grid.Row="0"
                           AllowDrop="True"                                                />
                    <Image x:ConnectionId='35' x:Name="middleRight1" Source="Assets/casilla.png" Stretch="Fill" 
                           Height="50" Width="50" Grid.Column="1" Grid.Row="1"
                           AllowDrop="True"                                                />
                    <Image x:ConnectionId='36' x:Name="middleRight2" Source="Assets/casilla.png" Stretch="Fill" 
                           Height="50" Width="50" Grid.Column="1" Grid.Row="2"
                           AllowDrop="True"                                                />
                    <Image x:ConnectionId='37' x:Name="middleRight3" Source="Assets/casilla.png" Stretch="Fill" 
                           Height="50" Width="50" Grid.Column="1" Grid.Row="3"
                           AllowDrop="True"                                                />
                    
                </Grid>
                
                <Image x:ConnectionId='29' x:Name="Prueba" Source="Assets/0.png" Height="60" Canvas.Top="130"
                       Width="50" Canvas.Left="10"                     CanDrag="True" 
                                                   AllowDrop="True"
                       Visibility="Collapsed"/>
            </Canvas>
            <Canvas x:ConnectionId='7' x:Name="CanvasLeft" Width="200" Height="100" Margin="-550, 450, 0, 0" VerticalAlignment="Top" >
                <Image x:ConnectionId='18' x:Name="LeftBackground" Source="Assets/casillaTumbao.png"
                           Height="100" Width="200" />
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <!--Casillas-->
                    <Image x:ConnectionId='19' x:Name="leftUp0" Source="Assets/casilla.png" Stretch="Fill" 
                           Height="50" Width="50" Grid.Column="0" Grid.Row="0"
                           AllowDrop="True"                                                />
                    <Image x:ConnectionId='20' x:Name="leftUp1" Source="Assets/casilla.png" Stretch="Fill" 
                           Height="50" Width="50" Grid.Column="1" Grid.Row="0"
                           AllowDrop="True"                                                />
                    <Image x:ConnectionId='21' x:Name="leftUp2" Source="Assets/casilla.png" Stretch="Fill" 
                           Height="50" Width="50" Grid.Column="2" Grid.Row="0"
                           AllowDrop="True"                                                />
                    <Image x:ConnectionId='22' x:Name="leftUp3" Source="Assets/casilla.png" Stretch="Fill" 
                           Height="50" Width="50" Grid.Column="3" Grid.Row="0"
                           AllowDrop="True"                                                />

                    <Image x:ConnectionId='23' x:Name="leftDown0" Source="Assets/casilla.png" Stretch="Fill" 
                           Height="50" Width="50" Grid.Column="0" Grid.Row="1"
                           AllowDrop="True"                                                />
                    <Image x:ConnectionId='24' x:Name="leftDown1" Source="Assets/casilla.png" Stretch="Fill" 
                           Height="50" Width="50" Grid.Column="1" Grid.Row="1"
                           AllowDrop="True"                                                />
                    <Image x:ConnectionId='25' x:Name="leftDown2" Source="Assets/casilla.png" Stretch="Fill" 
                           Height="50" Width="50" Grid.Column="2" Grid.Row="1"
                           AllowDrop="True"                                                />
                    <Image x:ConnectionId='26' x:Name="leftDown3" Source="Assets/casilla.png" Stretch="Fill" 
                           Height="50" Width="50" Grid.Column="3" Grid.Row="1"
                           AllowDrop="True"                                                />

                </Grid>
                
            </Canvas>
            <Canvas x:ConnectionId='8' x:Name="CanvasRight" Width="200" Height="100" Margin="550, 450, 0, 0" VerticalAlignment="Top" >
                <Image x:ConnectionId='9' x:Name="RightBackground" Source="Assets/casillaTumbao.png"
                           Height="100" Width="200" />
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>

                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <!--Casillas-->

                    <Image x:ConnectionId='10' x:Name="RightUp0" Source="Assets/casilla.png" Stretch="Fill" 
                           Height="50" Width="50" Grid.Column="0" Grid.Row="0"
                           AllowDrop="True"                                                />
                    <Image x:ConnectionId='11' x:Name="RightUp1" Source="Assets/casilla.png" Stretch="Fill" 
                           Height="50" Width="50" Grid.Column="1" Grid.Row="0"
                           AllowDrop="True"                                                />
                    <Image x:ConnectionId='12' x:Name="RightUp2" Source="Assets/casilla.png" Stretch="Fill" 
                           Height="50" Width="50" Grid.Column="2" Grid.Row="0"
                           AllowDrop="True"                                                />
                    <Image x:ConnectionId='13' x:Name="RightUp3" Source="Assets/casilla.png" Stretch="Fill" 
                           Height="50" Width="50" Grid.Column="3" Grid.Row="0"
                           AllowDrop="True"                                                />

                    <Image x:ConnectionId='14' x:Name="RightDown0" Source="Assets/casilla.png" Stretch="Fill" 
                           Height="50" Width="50" Grid.Column="0" Grid.Row="1"
                           AllowDrop="True"                                                />
                    <Image x:ConnectionId='15' x:Name="RightDown1" Source="Assets/casilla.png" Stretch="Fill" 
                           Height="50" Width="50" Grid.Column="1" Grid.Row="1"
                           AllowDrop="True"                                                />
                    <Image x:ConnectionId='16' x:Name="RightDown2" Source="Assets/casilla.png" Stretch="Fill" 
                           Height="50" Width="50" Grid.Column="2" Grid.Row="1"
                           AllowDrop="True"                                                />
                    <Image x:ConnectionId='17' x:Name="RightDown3" Source="Assets/casilla.png" Stretch="Fill" 
                           Height="50" Width="50" Grid.Column="3" Grid.Row="1"
                           AllowDrop="True"                                                />

                </Grid>
            </Canvas>



            <!--Tierra-->
            <Image Source="Assets/Earth.png" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Bottom" 
               Width="300" Height="300" />
        </Grid>
    </Viewbox>
</Page>

