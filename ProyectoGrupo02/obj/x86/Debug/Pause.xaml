<Page
    x:Class="ProyectoGrupo02.Pause"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProyectoGrupo02"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="DarkRed" d:DesignWidth="952.229">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Bloodsucker" FontSize="130" HorizontalAlignment="Center" VerticalAlignment="Top" 
                   FontFamily="Times New Roman" FontWeight="Black" Foreground="Black" Margin="60"/>
        <Slider x:ConnectionId='2' x:Name="SecondNumberSlider" Minimum="-10" Maximum="10" StepFrequency="0.01" 
                HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Grid.Row="1"
                Background="Black" Foreground="White">
            <Slider.Resources>
                <SolidColorBrush x:Key="SliderSelectionBackground" Color="Black" />
                <SolidColorBrush x:Key="SliderSelectionBorder" Color="Black" />
                <SolidColorBrush x:Key="SliderThumbBackground" Color="Black" />
                <SolidColorBrush x:Key="SliderThumbBackgroundDisabled" Color="Black" />
                <SolidColorBrush x:Key="SliderThumbBackgroundDragging" Color="Black" />
                <SolidColorBrush x:Key="SliderThumbBackgroundHover" Color="Black" />
                <SolidColorBrush x:Key="SliderThumbBorder" Color="Black" />
                <SolidColorBrush x:Key="SliderThumbBorderDisabled" Color="Black" />
                <SolidColorBrush x:Key="SliderThumbBorderDragging" Color="Black" />
                <SolidColorBrush x:Key="SliderThumbBorderHover" Color="Black" />
            </Slider.Resources>
        </Slider>
        <StackPanel Grid.Row="2" VerticalAlignment="Center">
            <Button x:ConnectionId='3' x:Name="Resume"                            Width="100" Height="100"
                        Background="Black" HorizontalAlignment="Left" >
                    <SymbolIcon Width="25"  Symbol="Play"/>
                </Button>
            <Button x:ConnectionId='4' x:Name="Return"                     Width="100" Height="100" 
                        Background="Black" HorizontalAlignment="Right">
                <SymbolIcon Width="25"  Symbol="Back"/>
            </Button>
        </StackPanel>
    </Grid>
</Page>

