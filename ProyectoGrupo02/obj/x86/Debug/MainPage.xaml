<Page
    x:Class="ProyectoGrupo02.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProyectoGrupo02"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="DarkGray">
        <TextBlock Text="Bloodsucker" FontSize="110" HorizontalAlignment="Center" VerticalAlignment="Top" 
                   FontFamily="Times New Roman" FontWeight="Black" Foreground="DarkRed" Margin="60"/>
        <!--Murciélagos-->
        <Image x:ConnectionId='2' x:Name="bats1" Source="Assets/Bats.png" HorizontalAlignment="Right" VerticalAlignment="Center" 
               Width="500" Height="500"  />

        <Image x:ConnectionId='3' x:Name="bats2" Source="Assets/Bats.png" HorizontalAlignment="Left" VerticalAlignment="Center" 
               Width="500" Height="500" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <ScaleTransform ScaleX="-1"/>
            </Image.RenderTransform>
        </Image>

        <StackPanel Width="500" Height="600" VerticalAlignment="Center" HorizontalAlignment="Center" Margin=" 0,150,0,0">
            <Button x:ConnectionId='4' x:Name="Play"                     Height="150" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
                <Viewbox MaxHeight="100" MaxWidth="100">
                    <SymbolIcon Symbol="Play" />
                </Viewbox>

            </Button>
            <Button x:ConnectionId='5' x:Name="Settings"                           Height="150" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="30">
                <Viewbox MaxHeight="100" MaxWidth="100">
                    <SymbolIcon Symbol="Setting" />

                </Viewbox>
            </Button>
            <Button x:ConnectionId='6' x:Name="Exit"                       Height="150" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
                <Viewbox MaxHeight="100" MaxWidth="100">
                    <SymbolIcon Symbol="Back" />

                </Viewbox>
            </Button>
        </StackPanel>
    </Grid>
</Page>

