<Page
    x:Class="ProyectoGrupo02.InGame"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProyectoGrupo02"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Gray">
    <Viewbox Stretch="Uniform">
        <Grid Background="Gray" Width="979" Height="653" >
            <!--Objetos-->
            <ListView  ItemsSource="{x:Bind Objects}"                    
                   HorizontalAlignment="Left" VerticalAlignment="Center"
                   IsItemClickEnabled="True"
                   ItemClick=" ChangeImage"
                   CanDragItems="True"
                       DragItemsStarting="ListView_DragItemsStarting"
                       AllowDrop="True"
                       >
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:VMObject">
                        <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                            <TextBlock Text="{x:Bind Id}" FontSize="30"/>
                            <Image Source="{x:Bind Imagen}" Height="50" />

                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!--pontenciadores de click-->
            <!--<ListView  ItemsSource="{x:Bind Booster}"                
                   HorizontalAlignment="Right" VerticalAlignment="Center"
                   IsItemClickEnabled="True"
                   ItemClick=" ChangeImage"
                   CanDragItems="True"
                   DragItemsStarting="ListView_DragItemsStarting">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:VMObject">
                        <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                            <TextBlock Text="{x:Bind Id}" FontSize="30"/>
                            <Image Source="{x:Bind Imagen}" Height="50" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>-->
            <!--pausa-->
            <Button x:Name="Pause" Width="70" Height="70" VerticalAlignment="Top" HorizontalAlignment="Left" Click="Click_Pause" Margin="20" Background="Black">
                <Viewbox MaxHeight="200" MaxWidth="200">
                    <SymbolIcon  Symbol="Pause"/>
                </Viewbox>
            </Button>

            <!--Dinero-->
            <TextBlock x:Name="Money" Text="0" Margin="150, 40" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="24" FontFamily="Comic Sans MS"/>

            <!--Clicker-->
            <Button  Width="100" Height="100" Content="Click me!" Click="Coin_Clicker"  HorizontalAlignment="Right" VerticalAlignment="Top" Margin="50">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="Gold"/>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!--Compras-->
            <Ellipse Fill="Silver" Width="200" Height="200" 
                     HorizontalAlignment="Left" VerticalAlignment="Top" 
                     Margin="130" 
                     
                     />
            <Ellipse Fill="Silver" Width="100" Height="125" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,150,195,0"/>

            <!--Caminos-->
            <Canvas x:Name="CanvasTop" Width="100" Height="200" Margin="129" VerticalAlignment="Top" >
                <Rectangle x:Name="TopRectangle" Width="100" Height="200" 
                       Fill="Bisque" Margin="129"
                        Drop="Ellipse_Drop" CanDrag="True" DragOver="Ellipse_DragOver" AllowDrop="True" Canvas.Left="-125" Canvas.Top="-131"/>
                <Image x:Name="Prueba" Source="Assets/0.png" Height="60" Canvas.Top="130" Width="50" Canvas.Left="10" 
                       Drop="Ellipse_Drop" CanDrag="True" DragOver="Ellipse_DragOver" AllowDrop="True"
                       Visibility="Collapsed"/> 
            </Canvas>
           


            <!--Tierra-->
            <Image Source="Assets/Earth.png" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Bottom" 
               Width="300" Height="300" />
        </Grid>
    </Viewbox>
</Page>
